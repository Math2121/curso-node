<%- include('../../partials/header.ejs')%>
 <%- include('../../partials/homenavbar.ejs')%>

<div class="container my-5">


  <%result.articles.rows.forEach(article=>{%>
  <div class="cards">
    <div class="card-header">
      <h2><%=article.title%></h2>
    </div>

    <div class="card-body">
      <a
        href="/<%=article.slug%>"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-success"
        >Ler artigo</a
      >
    </div>

    <br />
  </div>
  <%})%>


  <div class="row">
    <div class="col col-12 ">
      <% if(result.page >2){ %> 
        <a href="/articles/page/<%=result.page - 1 %>" class="float-left"> <<< Prev </a>
        <% }else if(result.page == 2){ %> 
          <a href="/" class="float-left"> Home  </a>

          <% } %> 
      <% if(result.next){ %> 
      <a href="/articles/page/<%=result.page + 1 %> " class="float-right">Next>>></a>
      <% } %> 
    </div>
 
  </div>
</div>

<%- include('../../partials/footer.ejs')%>

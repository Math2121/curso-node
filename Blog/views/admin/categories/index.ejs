<%- include('../../partials/header.ejs')%> <%-
include('../../partials/navbar.ejs')%>

<div class="container">
  <hr />

  <div class="row">
    <div class="col-md-6">
      <h2>Categorias</h2>
    </div>
    <div class="col-md-6">
      <button class="btn btn-success float-right" href="/admin/categories/new">
        <a href="/admin/categories/new"> Criar nova categoria </a> <i class="las la-plus"></i>
      </button>
    </div>
  </div>

  <hr />

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>

        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% categories.forEach( categories=>{ %>
      <tr>
        <th><%=categories.id%></th>
        <th><%=categories.title%></th>
        <th><%=categories.slug%></th>
        <th>

              
            <a href="/admin/categories/edit/<%=categories.id%>" class="btn btn-warning float-right">
              Editar <i class="lar la-edit"></i>
            </a>
       

          <form action="/categories/delete" method="POST" onsubmit="confirma(event,this)">
            <input type="hidden" name="id" value="<%=categories.id %>">
            <button class="btn btn-danger float-right mr-5">
              Deletar <i class="las la-trash-alt"></i>
            </button>
          </form>
        </th>
      </tr>
      <% })%>
    </tbody>
  </table>
</div>
<script>
  
  function confirma(event,form){

event.preventDefault();
var decision = confirm("Você realmente quer DELETAR essa categoria?")
if(decision){
 form.submit()
}else{
  console.log("Não deletei")
}
  }
</script>
